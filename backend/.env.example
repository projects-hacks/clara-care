# Deepgram (Voice Agent API)
DEEPGRAM_API_KEY=your_deepgram_api_key_here

# You.com (Nostalgia Search)
YOUCOM_API_KEY=your_youcom_api_key_here

# Sanity (Patient Data Store)
SANITY_PROJECT_ID=your_sanity_project_id
SANITY_DATASET=production
SANITY_TOKEN=your_sanity_token
SANITY_API_URL=https://api.claracare.me/api/sanity

# Foxit (Document Generation API)
FOXIT_BASE_URL=https://na1.fusion.foxit.com
FOXIT_DOCUMENT_GENERATION_CLIENT_ID=your_foxit_doc_gen_client_id
FOXIT_DOCUMENT_GENERATION_API_SECRET=your_foxit_doc_gen_api_secret

# Twilio (Outbound Phone Calls)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1your_twilio_number

# Email Alerts (SMTP Relay)
SMTP_HOST=smtp-relay.brevo.com
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASSWORD=your_smtp_password
FROM_EMAIL=alerts@claracare.me

# Dashboard URL (used in email notifications)
DASHBOARD_URL=https://claracare.me/dashboard

# Your server's public URL (Cloudflare-proxied domain)
SERVER_PUBLIC_URL=https://api.claracare.me
